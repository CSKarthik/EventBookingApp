<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.exmle.login"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk
        android:minSdkVersion="8"
        android:targetSdkVersion="17" />
    <uses-permission android:name="android.permission.INTERNET"/>
    <uses-permission android:name="android.permission.NFC"/>
    <uses-feature android:name="android.hardware.nfc" android:required="true"/>
    
    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_smartdesk"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name="com.exmle.login.MainActivity"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.exmle.login.Activity2"
            android:label="@string/app_name" >
        </activity>
         <activity
            android:name="com.exmle.login.Activity3"
            android:label="@string/app_name" >
        </activity>
        <activity
            android:name="com.exmle.login.EventOptions"
            android:label="@string/app_name" >
        </activity>
         <activity
            android:name="com.exmle.login.EventList"
            android:label="@string/app_name" >
        </activity>
        <activity
            android:name="com.exmle.login.Participants"
            android:label="@string/app_name"
            android:screenOrientation="landscape"  >
        </activity>
    </application>

</manifest>